<style>
    .question {
        margin-bottom: 1rem;
    }

    .confirm-btn {
        margin: .5rem;
    }
</style>

<div @onkeydown="(e => KeyPressed(e))">
    <div class="question">Are you sure?</div>
    <div class="d-flex justify-content-center">
        <button @onclick="Close" class="btn btn-primary confirm-btn">Yes</button>
        <button @onclick="Cancel" class="btn btn-secondary confirm-btn">No</button>
    </div>
</div>

    @code {
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }

    async Task Close() => await BlazoredModal.CloseAsync(ModalResult.Ok(true));
    async Task Cancel() => await BlazoredModal.CancelAsync();

    async Task KeyPressed(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
            await Cancel();
    }
}
