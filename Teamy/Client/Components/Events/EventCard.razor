<div class="event-card">
    <div class="event-card-img" style="background-image: url(@Evt.ImageUrl);"></div>

    <div class="event-card-data">
        <div class="event-card-title">@Evt.Title</div>

        @if (@Evt.DateStatus == EventDateStatus.Locked)
        {
            <div class="event-card-date">@Evt.EventDate.Value.ToString("ddd, dd MMM") @Evt.EventDate.Value.ToString("HH:mm") - @Evt.EventDateTo.Value.ToString("HH:mm")</div>
        }
        <div class="event-car-details" style="overflow: hidden;">@Evt.Description</div>
    </div> 
</div>

@code {
    [Parameter]
    public EventVM Evt { get; set; }
}
